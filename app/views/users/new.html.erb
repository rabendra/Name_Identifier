<h1>new page</h1>
<%= form_for @user do |f| %>
  <div class="field form-group">
    <%= f.label :please_enter_no_of_character_of_your_name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :character_no, class: 'form-control', placeholder: "no of character" %>
    </div>
	</div>
	<div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>